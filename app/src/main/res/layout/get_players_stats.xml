<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout2">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/layout2"
        android:contextClickable="true"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="30dp">

        <TextView
            android:id="@+id/team_name"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="640dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="      Team Name"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/player_name"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="640dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="      Player Name"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/layout"
        android:contextClickable="true"
        android:layout_below="@id/relativeLayout3"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="30dp">

        <TextView
            android:id="@+id/FirstText3"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="      Stats"
            android:gravity="center_vertical"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/relativeLayout4"
        android:background="@color/layout"
        android:contextClickable="true"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="30dp">

        <TextView
            android:id="@+id/vs"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="VS"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/twopts"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/vs"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2pts"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/threepts"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/twopts"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3pts"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/onepts"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/threepts"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1pts"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/rebo"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/onepts"
            android:layout_weight="1"
            android:gravity="center"
            android:text="R O"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/reba"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/rebo"
            android:layout_weight="1"
            android:gravity="center"
            android:text="R A"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/steal"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/reba"
            android:layout_weight="1"
            android:gravity="center"
            android:text="S"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/block"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/steal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="B"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/turn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/block"
            android:layout_weight="1"
            android:gravity="center"
            android:text="T"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/fouls"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/turn"
            android:layout_weight="1"
            android:gravity="center"
            android:text="F"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/pkt"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/fouls"
            android:layout_weight="1"
            android:gravity="center"
            android:text="pkt"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/eval"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/pkt"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+/-"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>
    </RelativeLayout>

    <ListView
        android:id="@+id/listViewStats"
        android:layout_width="match_parent"
        android:layout_height="661dp"
        android:layout_below="@+id/relativeLayout5"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="-140dp"
        android:contextClickable="true"
        android:descendantFocusability="blocksDescendants"
        android:divider="@color/layout"
        android:dividerHeight="2px"
        android:focusable="true"
        android:transcriptMode="alwaysScroll">
        <!--        android:entries="@array/sections" -->
        >
    </ListView>

</RelativeLayout>