<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout2"
    tools:context=".Fragment1">


    <Button
        android:id="@+id/addPlayer"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="1080dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounded_corners"
        android:text="@string/Add_Player"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/layout"
        android:contextClickable="true"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="30dp">

        <TextView
            android:id="@+id/FirstText1"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="      Team Name"
            android:gravity="center_vertical"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/layout2"
        android:contextClickable="true"
        android:layout_below="@id/relativeLayout2"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="30dp">

        <TextView
            android:id="@+id/FirstText2"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="      Team Name"
            android:gravity="center_vertical"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/layout"
        android:contextClickable="true"
        android:layout_below="@id/relativeLayout3"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="30dp">

        <TextView
            android:id="@+id/FirstText3"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="      Players"
            android:gravity="center_vertical"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/relativeLayout4"
        android:background="@color/layout"
        android:contextClickable="true"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="30dp">

        <TextView
            android:id="@+id/FirstText4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Player Name"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/SecondText4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Player Number"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/ThirdText4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Position"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/listView3"
        android:layout_width="match_parent"
        android:layout_height="661dp"
        android:layout_above="@id/addPlayer"
        android:layout_below="@+id/relativeLayout5"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="-140dp"
        android:contextClickable="true"
        android:descendantFocusability="blocksDescendants"
        android:divider="@color/layout"
        android:dividerHeight="2px"
        android:focusable="true"
        android:transcriptMode="alwaysScroll">
        <!--        android:entries="@array/sections" -->
        >
    </ListView>

</RelativeLayout>