<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout2">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/layout2"
        android:contextClickable="true"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="30dp">

        <TextView
            android:id="@+id/team_name"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="640dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="      Team Name"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/layout"
        android:contextClickable="true"
        android:layout_below="@id/relativeLayout3"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="30dp">

        <TextView
            android:id="@+id/FirstText3"
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="      Stats"
            android:gravity="center_vertical"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/relativeLayout4"
        android:background="@color/layout"
        android:contextClickable="true"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="30dp">

        <TextView
            android:id="@+id/result"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Result"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/vs"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/result"
            android:layout_weight="1"
            android:gravity="center"
            android:text="VS"
            android:textColor="@color/green"
            android:textSize="30dp"></TextView>


    </RelativeLayout>

    <ListView
        android:id="@+id/listViewStats"
        android:layout_width="match_parent"
        android:layout_height="661dp"
        android:layout_below="@+id/relativeLayout5"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="-140dp"
        android:contextClickable="true"
        android:descendantFocusability="blocksDescendants"
        android:divider="@color/layout"
        android:dividerHeight="2px"
        android:focusable="true"
        android:transcriptMode="alwaysScroll">
        <!--        android:entries="@array/sections" -->
        >
    </ListView>

</RelativeLayout>